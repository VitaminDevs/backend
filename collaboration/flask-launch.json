{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "backend",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--debugger",
        "--host=0.0.0.0",
        "--port=5000",
        "--debugger",
        "--reload"
      ],
      "jinja": false,
      "autoStartBrowser": false,
      "justMyCode": true
    }
  ]
}